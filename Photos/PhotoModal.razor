<h1>Hello Modal, URI : @Url</h1>

<div class="modal is-active">
    <div class="modal-background" @onclick="@(() => IsActive = false)"></div>
    <div class="modal-content">
        <figure class="image">
          <img src="@Url" />
        </figure>
    </div>
    <button class="modal-close is-large" aria-label="close" @onclick="@(() => IsActive = false)"></button>
</div>

@code {
  [Parameter]
  public string Url { get; set; }

  public bool IsActive { get; set; }
}
